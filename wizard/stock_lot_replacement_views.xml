<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_lot_replacement_wizard_form" model="ir.ui.view">
        <field name="name">stock.lot.replacement.wizard.form</field>
        <field name="model">stock.lot.replacement.wizard</field>
        <field name="arch" type="xml">
            <form string="Reemplazo de Lotes">
                <group>
                    <group>
                        <field name="picking_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="picking_type_id" readonly="1"/>
                    </group>
                </group>

                <separator string="Lotes Devueltos â†’ Seleccione Reemplazos"/>

                <div class="alert alert-info mb-2" role="alert">
                    <strong>ðŸ”„ Seleccione los lotes de reemplazo.</strong>
                    Para cada lote devuelto, elija uno o mÃ¡s lotes disponibles en inventario
                    como reemplazo. La cantidad se calcula automÃ¡ticamente segÃºn el stock disponible.
                </div>

                <field name="line_ids" nolabel="1">
                    <list editable="bottom"
                          create="0"
                          delete="0"
                          decoration-success="to_replace and replacement_lot_ids"
                          decoration-muted="not to_replace">

                        <!-- Campos tÃ©cnicos ocultos -->
                        <field name="available_lot_ids" column_invisible="1"/>
                        <field name="original_move_id" column_invisible="1"/>

                        <!-- Checkbox reemplazar -->
                        <field name="to_replace" string="âœ“" width="40px"/>

                        <!-- Producto -->
                        <field name="product_id" readonly="1"/>

                        <!-- Lote devuelto -->
                        <field name="returned_lot_id" string="Lote Devuelto" readonly="1"/>

                        <!-- Cantidad devuelta -->
                        <field name="returned_qty" string="Cant. Devuelta" readonly="1"/>

                        <!-- Lotes de reemplazo como tags -->
                        <field name="replacement_lot_ids"
                               string="Lotes de Reemplazo"
                               widget="many2many_tags"
                               domain="[('id', 'in', available_lot_ids)]"
                               options="{'no_create': True}"
                               readonly="not to_replace"/>

                        <!-- Cantidad a entregar (auto-calculada) -->
                        <field name="replacement_qty"
                               string="Cant. a Entregar"
                               readonly="1"
                               decoration-info="replacement_qty > 0"
                               decoration-danger="replacement_qty == 0 and to_replace"/>

                        <!-- UdM -->
                        <field name="product_uom_id" string="UdM" readonly="1"/>
                    </list>
                </field>

                <footer>
                    <button name="action_create_replacement"
                            string="Crear Entrega de Reemplazo"
                            type="object"
                            class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_stock_lot_replacement_wizard" model="ir.actions.act_window">
        <field name="name">Reemplazo de Lotes</field>
        <field name="res_model">stock.lot.replacement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
